modules = ["nodejs-20", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "git", "gitFull", "gumbo", "harfbuzz", "jbig2dec", "libjpeg_turbo", "libyaml", "mupdf", "openjpeg", "openssl", "playwright-driver", "postgresql", "swig", "unzipNLS", "xcbuild"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Smart Start"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Smart Start"
author = 44040350
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python start_server.py"

[[workflows.workflow]]
name = "Manual Port Start"
author = 44040350
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[agent]
integrations = ["python_database==1.0.0"]

run = "python main.py"
language = "python3"
entrypoint = "main.py"

[env]
PORT = "8080"

[[ports]]
localPort = 8080
externalPort = 80
