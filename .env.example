# VectorBid Environment Configuration
# Copy this file to .env and update with your actual values

# LLM Configuration (Required for AI features)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Model Configuration
LLM_MODEL_PRIMARY=gpt-4-turbo-preview
LLM_MODEL_FALLBACK=gpt-3.5-turbo
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/vectorbid
DATABASE_TEST_URL=postgresql://user:password@localhost/vectorbid_test

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Export Configuration
EXPORT_DIR=./exports
EXPORT_SIGNING_KEY=your-signing-key-here

# Development Configuration
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Monitoring & Analytics
PROMETHEUS_ENABLED=false
ANALYTICS_ENABLED=false

# Email Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@vectorbid.com

# Third-party Integrations
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=